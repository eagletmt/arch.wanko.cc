- content_for(:title, "#{repo_name} - arch.wanko.cc")

%h1= repo_name

.panel.panel-default
  .panel-heading Setup
  .panel-body
    %p Before using this repository, import and trust #{link_to 'my GPG key', 'https://wanko.cc/gpg.html'}.
    %pre
      %code
        :preserve
          # pacman-key --recv-keys C48DBD97
          # pacman-key --lsign-key C48DBD97
    %p Add the following setting to your /etc/pacman.conf.
    %pre
      %code
        :preserve
          [#{repo_name}]
          SigLevel = Required
          Server = http://arch.wanko.cc/$repo/os/$arch

- %w[x86_64].each do |arch|
  %div
    %h2= arch
    - packages = repo.packages(arch)
    %table.table
      %thead
        %tr
          %th name
          %th version
          %th package
          %th signature
          %th builddate
      %tbody
        - packages.keys.sort.each do |key|
          - desc = packages[key]
          %tr
            %td= desc[:name]
            %td= desc[:version]
            - path = "/#{repo_name}/os/#{arch}/#{desc[:filename]}"
            %td= link_to desc[:filename], path
            %td= link_to "#{desc[:filename]}.sig", "#{path}.sig"
            %td{data: {time: desc[:builddate]}}= Time.at(desc[:builddate].to_i)
